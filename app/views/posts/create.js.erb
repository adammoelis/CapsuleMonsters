<% publish_to '/live-feed' do %>
  $('#posts').prepend('<tr id="post-<%= @post.id %>"><%= j render partial: "post_body", locals: { post: @post } %></tr>');

  $('#post-<%= @post.id %>')
    .hide()
    .fadeIn();
<% end %>

$('#post-<%= @post.id %>').append('<%= j render partial: "post_crud", locals: { post: @post } %>');
$('#new_post')[0].reset();
