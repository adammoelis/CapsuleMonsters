  <title>CapsuleMonsters</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script language="javascript">
  function playPause(){
      var audio = document.getElementById("player");
      if (audio.paused){
        audio.play();
      }
      else {
        audio.pause();
      }
  }
  </script>
</head>

  <body>
    <div>
      <audio id="player" src="/media/PokemonTVThemeSongFull.mp3"></audio>
      <img onclick="playPause()" src="/images/pokeball.png" alt="Pokemon Logo" id="pokelogo" height="50px;" width="50px;" class: "img-responsive poke_logo_image">
    </div>

    <% if user_signed_in? %>
      <%= form_tag search_user_path, :method => 'get' do %>
        <%= label_tag(:query, "Search for:") %>
        <%= text_field_tag(:query) %>
        <%= submit_tag 'Search' %>
      <% end %>
    <% end %>


    <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg %>
    <% end -%>



<%= yield %>


  </body>
