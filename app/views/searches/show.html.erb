<h1>User Search</h1>

<%= form_tag(searches_show_path, method: 'get') do %>
  <%= text_field_tag(:query, params[:query]) %>
  <%= submit_tag('Search') %>
<% end %>

<h1>Results</h1>
<ul>
  <% @search.each do |user| %>
    <li>
      <%= link_to user.username, user_path(user.id) %>
    </li>
  <% end %>
</ul>
